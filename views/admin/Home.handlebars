<body style="background-color: rgb(20, 46, 67);">
    <!-- Header Section -->
    <header class="text-light text-center py-2" style="background-color: rgb(41, 81, 123);">
        <h1>Welcome, Admin!</h1>
        <a href="/adminLogout" class="btn btn-danger btn-sm">Logout</a>
    </header>

    <!-- Main Content Section -->


    <main class="container my-4">
        <section id="user-management">
            <!-- User Management Cards -->

            <br>
  

            <br><br><br>
            <div class="row">
                <!-- View All Users Card -->
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">View All Users</h5>
                            <p class="card-text">View and manage all user data.</p>
                            <a href="/view" class="btn btn-warning">Go to User List</a>
                        </div>
                    </div>
                </div>

                <!-- Add User Card -->
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Create User</h5>
                            <p class="card-text">Add a new user to the system.</p>
                            <a href="/createUser" class="btn btn-warning">Add User</a>
                        </div>
                    </div>
                </div>
            </div>

            <br><br>

            <div class="row">
                <!-- Edit User Card -->
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Search User</h5>
                            <p class="card-text">Search existing user information.</p>
                            <a href="/searchPage" class="btn btn-warning">Search User</a>
                        </div>
                    </div>
                </div>

                <!-- Delete User Card -->
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Delete or edit User</h5>
                            <p class="card-text">Remove or edit user from the system.</p>
                            <a href="/view" class="btn btn-warning">Edit or Delete User</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>


