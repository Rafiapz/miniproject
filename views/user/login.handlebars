<section class="vh-100" style="background-color: #232934;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          
          <div class="card-body p-5 text-center">
            <h6 style="color: green;">{{submission}}</h6>           
            

            <h3 class="mb-4">LOGIN</h3>

            <form action="/userLogin" method="post">

              <div class="mb-4">
                <label for="typeEmailX-2" class="form-label">Username</label>
                <input type="email" id="typeEmailX-2" class="form-control form-control-lg" name="email"
                  placeholder="Enter your email" required />
              </div>

              <div class="mb-4">
                <label for="typePasswordX-2" class="form-label">Password</label>
                <input type="password" id="typePasswordX-2" class="form-control form-control-lg" name="password"
                  placeholder="Enter your password" required />
              </div>

              <p class="mb-4 text-muted">Don't have an account? <a href="/signup">Create an account</a></p>

              <button type="submit" class="btn btn-primary btn-lg" id="sub" style="width: 50%;">Login</button>

              <hr class="my-4">

            </form>

            <p style="color: red;">{{invalid}}</p>

            <!-- Checkbox -->

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
